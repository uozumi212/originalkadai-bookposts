<body style="background: #dbffed;">
    <div style="text-align: center;">
     </div>
</body>
<% if bookposts.any? %>
  <ul class="list-unstyled mt-2">
    <% bookposts.each do |bookpost| %>
      <li class="d-flex">
        
        <div>
          <div>
            <%= link_to bookpost.user.name, bookpost_path(bookpost.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= bookpost.created_at %></span>
          </div>
            <div> 
             <font size="4" color="white">本のタイトル</font>
             <p><%= bookpost.title %></p>
            </div>
          <div>
            <font size="4" color="white">レビュー</font>
            <p><%=  bookpost.content %></p>
          </div>
        <div>
        <% if current_user == bookpost.user %>
         <%= link_to "削除", bookpost, method: :delete, data: { confirm: "削除してもいいですか？" }, class: "btn btn-danger btn-sm" %>
         <%= render 'likes/like_button', bookpost: bookpost %>
         <% end %>
       </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>
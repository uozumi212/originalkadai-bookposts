<% if bookposts.any? %>
     <% bookposts.each do |bookpost| %>
      
      <div class="display-flex">
            <div class="text-primary"><h3>本のタイトル</h3>
               <p><%= bookpost.title %></p>
            </div>
          
          <div class= "text-primary"><h4>レビュー</h4>
             <p><%=  bookpost.content %></p>
          </div>
         <div>
            <% if current_user == bookpost.user %>
            <%= link_to "削除", bookpost, method: :delete, data: { confirm: "削除してもいいですか？" }, class: "btn btn-danger w-40" %>
          </div>
         <div>
            <% else bookpost.user == current_user %>
            <%= render 'likes/like_button', bookpost: bookpost %>
            <% end %>
         </div>
           <% end %>
         <div class="offset-sm-2">
           <%== pagy_bootstrap_nav(@pagy) %>
         </div>
     </div>
  </div>
<% end %>